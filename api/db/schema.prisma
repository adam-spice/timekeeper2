datasource DS {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Priority {
  id        Int     @id @default(autoincrement())
  name      String
  projects  Project[]
}

model Client {
  id        Int     @id @default(autoincrement())
  name      String
  location  String
  projects  Project[]
  createdAt DateTime @default(now())
}

model Project {
  id          Int       @id @default(autoincrement())
  name        String
  priority    Priority  @relation(fields: [priorityId], references: [id])
  priorityId  Int
  client      Client    @relation(fields: [clientId], references: [id])
  clientId    Int
  due         DateTime
  createdAt   DateTime  @default(now())
}

model Work {
  id          Int     @id @default(autoincrement())
  description String
  date        DateTime
  hoursWorked Int
  client      Client     @relation(fields: [clientId], references: [id])
  clientId    Int
  project     Project     @relation(fields: [projectId], references: [id])
  projectId   Int
  createdAt   DateTime @default(now())
}

model Test{
  id          Int     @id @default(autoincrement())
  description String
}
